<section class="container">
  <h1 class="item-title"><%= @campground.name %></h1>
  <%= button_to 'Edit', "/campgrounds/#{@campground.id}/edit", method: :get, class: "item-button" %>
  <%= button_to 'Delete', "/campgrounds/#{@campground.id}", method: :delete, class: "item-button" %>
</section>

<p class="indent">
  Reservations Allowed: <%= @campground.reservation_allowed %><br>
  Max Nights Stay: <%= @campground.max_nights %><br>
  Number of Campsites: <%= @campground.campsite_count %><br>
  Created at: <%= @campground.created_at%><br>
  Updated at: <%= @campground.updated_at %><br>
  <br>
  <%= link_to "Campsites at #{@campground.name}", "/campgrounds/#{@campground.id}/campsites", method: :get %>
</p>
