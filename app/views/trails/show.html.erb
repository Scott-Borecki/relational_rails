<section class="container">
  <h1 class="item-title"><%= @trail.name %></h1>
  <%= button_to 'Edit', "/trails/#{@trail.id}/edit", method: :get, class: "item-button" %>
  <%= button_to 'Delete', "/trails/#{@trail.id}", method: :delete, class: "item-button" %>
</section>

<p class="indent">
  Loop?: <%= @trail.is_loop %><br>
  Length: <%= @trail.length %> miles<br>
  National Park: <%= NationalPark.find(@trail.national_park_id).name %><br>
  Created at: <%= @trail.created_at %><br>
  Updated at: <%= @trail.updated_at %>
</p>
